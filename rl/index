    <script defer>
        $(document).ready(function () {
            $("#copy").append("Viper Play " + new Date().getFullYear() + "&copy; Todos los derechos reservados. <strong>-</strong>  <a href='https://viperplay.net/dmca/index.html' target='_blank' class='dmca_link' rel='noopener noreferrer'>DMCA</a> <strong>-</strong>");
            $.get("https://api.viperplay.net/categorias", function (data) {
                let categorias = data.data;
                for (const categoria of categorias) {
                    let canales = categoria.canales.filter(canalTemp => {
                        var mac = /(Mac|iPhone|iPod|iPad)/i.test(navigator.platform);
                        if (canalTemp.dispositivo == "TODOS") {
                            return true;
                        } else if (canalTemp.dispositivo == "IOS" && mac) {
                            return true;
                        } else if (canalTemp.dispositivo == "ANDROID" && !mac) {
                            return true;
                        } else {
                            return false;
                        }
                    });
                    if (canales.length > 0) {
                        if(categoria.id==0){
                            for (const canal of canales) {
                                let href = "/";
                                if (canal.id_formato_canal === 1) {
                                    href = "/hls/#" + canal.slug;
                                }
                                if (canal.id_formato_canal === 3) {
                                    href = "/frame/#" + canal.slug;
                                }
                                if (canal.id_formato_canal === 4) {
                                    href = "/live/#" + canal.slug;
                                }
                                $(".grids").append(`
                                <div class="grid">
                                    <img src="`+canal.imagen+`" alt="">
                                    <a href="`+href+`">
                                        <button>Ver canal</button>
                                    </a>
                                </div>
                                `);
                            }
                        }else{
                            let date = moment(categoria.horario, 'hh:mm').add(5, 'hours').format('YYYY-MM-DD HH:mm:ss');
                            var stillUtc = moment.utc(date).toDate();
                            let horario = moment(stillUtc).local().format('DD/MM/yyyy hh:mm A');
                            let canalesHTML = ``;
                            for (const canal of canales) {
                                let href = "/";
                                if (canal.id_formato_canal === 1) {
                                    href = "/hls/#" + canal.slug;
                                }
                                if (canal.id_formato_canal === 3) {
                                    href = "/frame/#" + canal.slug;
                                }
                                if (canal.id_formato_canal === 4) {
                                    href = "/live/#" + canal.slug;
                                }
                                canalesHTML += `
                                <div class="canales">
                                    <a href="`+ href + `">
                                        <div class="canal">
                                            <div class="icono">
                                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                                    xmlns="http://www.w3.org/2000/svg">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                        d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z">
                                                    </path>
                                                </svg>
                                            </div>
                                            <div class="nombre">`+ canal.titulo + `</div>
                                        </div>
                                    </a>
                                </div>
                                `;
                            }
                            $(".canales_en_vivos").append(`
                            <div class="categoria animate__animated animate__bounceInUp">
                                <div class="contenedor_categoria">

                                    <div class="contenedor_hora_y_pais">
                                        <div>
                                            <center>
                                                <img src="`+ categoria.pais + `" height="20" alt="Bandera">
                                                <br>
                                                <span class="hora">`+ horario + `</span>
                                            </center>
                                        </div>
                                    </div>

                                    <div class="content-texto">
                                        <div>
                                            <span>`+ categoria.nombre + `</span>
                                            <h2 class="titulo">`+ categoria.titulo + `</h2>
                                        </div>
                                    </div>

                                    <div class="horario">
                                        <span>
                                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                                xmlns="http://www.w3.org/2000/svg">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z">
                                                </path>
                                            </svg>
                                        <br />`+ canales.length + ` Canales</span>
                                    </div>
                                </div>
                                `+ canalesHTML + `
                            </div>
                            `);
                        }
                    }
                }
                /*Mostrar sub navegacion*/
                $(".canales_en_vivos .categoria").on("click", function () {
                    $('.contenedor_categoria').removeClass('activo_contenedor_categoria');
                    if ($(this).find(".canales").is(":hidden")) {
                        $(".canales").hide(200);
                        $(this).find(".canales").toggle(300);
                        $(this).find(".contenedor_categoria").addClass('activo_contenedor_categoria');
                    } else {
                        $(this).find(".canales").toggle(300);
                    }
                });
            });
        });
    </script>
